      <answer-options>
        <answer-option>XPath, XQuery, XPointer.</answer-option>
        <answer-option>HTML, CSS, JavaScript.</answer-option>
        <answer-option>Java, C#, Python.</answer-option>
        <answer-option>SQL, NoSQL, MongoDB.</answer-option>
        <answer-option>JSON, YAML, CSV.</answer-option>
      </answer-options>
      <correct-answer>1</correct-answer>
    </question>
  </quiz>
